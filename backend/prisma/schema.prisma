generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Enrollment {
  id String @id @default(uuid())

  totalValue           Float?
  numberOfInstallments Int?

  name                  String
  documentNumber        String   @unique
  birthdate             DateTime
  email                 String   @unique
  phone                 String
  highSchoolGraduation  Int
  terms                 Boolean
  whatsAppNotifications Boolean?

  courseType CourseType
}

enum CourseType {
  INPERSON
  DISTANCE
}
